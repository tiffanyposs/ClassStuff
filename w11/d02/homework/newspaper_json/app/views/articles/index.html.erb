<html>
  <head>
    <title></title>
  </head>
  <body>

<h1>Welcome to my newspaper!</h1>

<div class="container-fluid">
    <% @articles.each do |article| %>
  <div class= "row">
  <div class = "col-md-6 col-md-offset-3">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#<%=article.id%>" aria-expanded="false" aria-controls="collapseExample">
    <%=article.headline%>
    </button>
    <div class="collapse" id="<%=article.id%>">
      <div class="well">
      <%= link_to article.headline, article_path(article) %>
      <br>

      <br>
      <%= article.content %>
      <br>
      <img class="img-circle" <%= image_tag article.photo_url, height:300%> >
      <br>
      </div>
    </div>
    </div>
    </div>

    <% end %>


</div>

  </body>
</html>
