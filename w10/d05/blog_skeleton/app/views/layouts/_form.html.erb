<!-- you might not even need the action: update thing since the file name is edit -->

<%= form_for @post, url: {action: 'update'} do |f| %>
<%= f.label :title %>
<%= f.text_field :title, value: @post.title %>
<br /><br />

<%= f.label :author %>
<%= f.text_field :author, value: @post.author %>
<br /><br />

<%= f.label :content %>
<%= f.text_area :content, value: @post.author %>
<br /><br />

<%= f.submit %>
<% end %>

<%= link_to 'cancel', @post %>