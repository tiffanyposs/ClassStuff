<body>


<h2>Your Color is <%= color %>!</h2>

<% var i = word.length; %>
<% var array = []; %>
<% while(i > -1){ %>
	<% word.split(""); %>
	<% array.push(word[i]); %>
	<% i--; %>
<% } %>
<% var new_word = array.join(); %>
<p> <%= new_word%> </p>







